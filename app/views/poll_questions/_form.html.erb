      <h2><%= pluralize(poll_question.errors.count, "error") %> prohibited this poll_question from being saved:</h2>

      <ul>
      <% poll_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :poll_id %>
      <%= f.select(:poll_id, [], {}, {:class => "form-control"}) do %>
        <% @polls.each do |p| %>
          <%= content_tag(:option, p.name, value: p.id) %>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit "Sauvegarder", class: "btn btn-success" %>
    </div>
  </form>
<% end %>
